<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[@Name="BuildingBase"]/placeWorkers</xpath>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[@Name="BuildingBase"]/placeWorkers</xpath>
			<value>
				<li>TabulaRasa.PlaceWorker_SubCategoryBuilding</li>
			</value>
		</match>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[@Name="BuildingBase"]</xpath>
			<value>
				<placeWorkers>
					<li>TabulaRasa.PlaceWorker_SubCategoryBuilding</li>
				</placeWorkers>
			</value>
		</nomatch>
	</Operation>

</Patch>