<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Vanilla Pirate Integration Hook -->
	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/PawnKindDef[@Name="PirateBase"]/modExtensions</xpath>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/PawnKindDef[@Name="PirateBase"]/modExtensions</xpath>
			<value>
				<li Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind">
					<altRaces />
				</li>
			</value>
		</match>
		<nomatch Class="PatchOperationAddModExtension">
			<xpath>/Defs/PawnKindDef[@Name="PirateBase"]</xpath>
			<value>
				<li Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind">
